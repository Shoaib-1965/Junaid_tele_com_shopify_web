<script>
  (function() {
    class HeroCarousel{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentIndex = 0;
        this.cards = [];
        this.dots = [];
        this.autoRotateInterval = null;
        this.isHovered = false;
        this.isTouching = false;
      }

      connectedCallback() {
        this.cards = Array.from(this.querySelectorAll('.ai-hero-card-{{ ai_gen_id }}'));
        this.dots = Array.from(this.querySelectorAll('.ai-hero-dot-{{ ai_gen_id }}'));
        
        if (this.cards.length === 0) return;

        this.setupEventListeners();
        this.updateCarousel();
        this.startAutoRotate();
      }

      disconnectedCallback() {
        this.stopAutoRotate();
      }

      setupEventListeners() {
        this.dots.forEach((dot, index) => {
          dot.addEventListener('click', () => {
            this.currentIndex = index;
            this.updateCarousel();
            this.resetAutoRotate();
          });
        });

        this.cards.forEach((card, index) => {
          card.addEventListener('click', (e) => {
            if (!card.href && index !== this.currentIndex) {
              e.preventDefault();
              this.currentIndex = index;
              this.updateCarousel();
              this.resetAutoRotate();
            }
          });
        });

        const carouselSide = this.querySelector('.ai-hero-carousel-side-{{ ai_gen_id }}');
        
        carouselSide.addEventListener('mouseenter', () => {
          this.isHovered = true;
          this.stopAutoRotate();
        });

        carouselSide.addEventListener('mouseleave', () => {
          this.isHovered = false;
          if (!this.isTouching) {
            this.startAutoRotate();
          }
        });

        carouselSide.addEventListener('touchstart', () => {
          this.isTouching = true;
          this.stopAutoRotate();
        }, { passive: true });

        carouselSide.addEventListener('touchend', () => {
          setTimeout(() => {
            this.isTouching = false;
            if (!this.isHovered) {
              this.startAutoRotate();
            }
          }, 3000);
        }, { passive: true });
      }

      updateCarousel() {
        const totalCards = this.cards.length;
        
        this.cards.forEach((card, index) => {
          const offset = index - this.currentIndex;
          const absOffset = Math.abs(offset);
          
          let translateX = 0;
          let translateZ = 0;
          let rotateY = 0;
          let scale = 1;
          let opacity = 1;
          let zIndex = 0;

          if (offset === 0) {
            translateX = 0;
            translateZ = 0;
            rotateY = 0;
            scale = 1;
            opacity = 1;
            zIndex = 10;
          } else if (offset === 1 || offset === -(totalCards - 1)) {
            translateX = 75;
            translateZ = -200;
            rotateY = -35;
            scale = 0.75;
            opacity = 0.5;
            zIndex = 5;
          } else if (offset === -1 || offset === totalCards - 1) {
            translateX = -75;
            translateZ = -200;
            rotateY = 35;
            scale = 0.75;
            opacity = 0.5;
            zIndex = 5;
          } else if (absOffset === 2 || absOffset === totalCards - 2) {
            translateX = offset > 0 ? 140 : -140;
            translateZ = -350;
            rotateY = offset > 0 ? -45 : 45;
            scale = 0.6;
            opacity = 0.25;
            zIndex = 1;
          } else {
            translateX = offset > 0 ? 200 : -200;
            translateZ = -500;
            rotateY = offset > 0 ? -55 : 55;
            scale = 0.5;
            opacity = 0;
            zIndex = 0;
          }

          card.style.transform = `translate(-50%, -50%) translateX(${translateX}%) translateZ(${translateZ}px) rotateY(${rotateY}deg) scale(${scale})`;
          card.style.opacity = opacity;
          card.style.zIndex = zIndex;
          card.style.pointerEvents = offset === 0 ? 'auto' : 'none';
        });

        this.dots.forEach((dot, index) => {
          if (index === this.currentIndex) {
            dot.classList.add('active');
          } else {
            dot.classList.remove('active');
          }
        });
      }

      startAutoRotate() {
        if (this.autoRotateInterval) return;
        
        const speed = {{ block.settings.auto_rotate_speed }};
        if (speed > 0) {
          this.autoRotateInterval = setInterval(() => {
            if (!this.isHovered && !this.isTouching) {
              this.currentIndex = (this.currentIndex + 1) % this.cards.length;
              this.updateCarousel();
            }
          }, speed * 1000);
        }
      }

      stopAutoRotate() {
        if (this.autoRotateInterval) {
          clearInterval(this.autoRotateInterval);
          this.autoRotateInterval = null;
        }
      }

      resetAutoRotate() {
        this.stopAutoRotate();
        this.startAutoRotate();
      }
    }

    customElements.define('hero-carousel-{{ ai_gen_id }}', HeroCarousel{{ ai_gen_id }});
  })();
</script>

