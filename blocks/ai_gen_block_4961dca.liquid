{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-hero-carousel-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    min-height: {{ block.settings.section_min_height }}px;
    position: relative;
    overflow: hidden;
  }

  .ai-hero-bg-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
  }

  .ai-hero-bg-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-hero-bg-gradient-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background: {{ block.settings.gradient_start }};
    background: linear-gradient(135deg, {{ block.settings.gradient_start }} 0%, {{ block.settings.gradient_middle }} 50%, {{ block.settings.gradient_end }} 100%);
  }

  .ai-hero-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: {{ block.settings.overlay_color }};
    opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};
    z-index: 1;
  }

  .ai-hero-container-{{ ai_gen_id }} {
    max-width: 1400px;
    margin: 0 auto;
    padding: 60px 20px;
    position: relative;
    z-index: 2;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: center;
    min-height: {{ block.settings.section_min_height }}px;
  }

  .ai-hero-carousel-side-{{ ai_gen_id }} {
    position: relative;
    height: 600px;
    perspective: 1500px;
  }

  .ai-hero-carousel-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: 100%;
    transform-style: preserve-3d;
  }

  .ai-hero-card-{{ ai_gen_id }} {
    position: absolute;
    width: 100%;
    max-width: 450px;
    height: 550px;
    left: 50%;
    top: 50%;
    transform-origin: center;
    transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
    cursor: pointer;
    text-decoration: none;
    display: block;
  }

  .ai-hero-card-inner-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background: {{ block.settings.card_bg }};
    backdrop-filter: blur({{ block.settings.card_blur }}px);
    border-radius: {{ block.settings.card_radius }}px;
    border: {{ block.settings.card_border_width }}px solid {{ block.settings.card_border_color }};
    overflow: hidden;
    box-shadow: 0 30px 80px {{ block.settings.card_shadow }};
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
    transform-style: preserve-3d;
    position: relative;
  }

  .ai-hero-card-{{ ai_gen_id }}:hover .ai-hero-card-inner-{{ ai_gen_id }} {
    transform: translateY(-15px) rotateX(10deg);
    box-shadow: 0 50px 120px {{ block.settings.card_shadow }};
  }

  .ai-hero-card-img-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .ai-hero-card-{{ ai_gen_id }}:hover .ai-hero-card-img-{{ ai_gen_id }} {
    transform: scale(1.1);
  }

  .ai-hero-card-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: {{ block.settings.placeholder_bg }};
    position: relative;
  }

  .ai-hero-card-placeholder-{{ ai_gen_id }} svg {
    width: 120px;
    height: 120px;
    opacity: 0.15;
  }

  .ai-hero-placeholder-text-{{ ai_gen_id }} {
    position: absolute;
    bottom: 40px;
    left: 50%;
    transform: translateX(-50%);
    color: {{ block.settings.placeholder_text_color }};
    font-size: 15px;
    opacity: 0.8;
    text-align: center;
    padding: 0 20px;
    font-weight: 500;
  }

  .ai-hero-content-side-{{ ai_gen_id }} {
    padding: 40px 0;
  }

  .ai-hero-company-name-{{ ai_gen_id }} {
    font-size: {{ block.settings.company_name_size }}px;
    font-weight: 800;
    color: {{ block.settings.company_name_color }};
    margin: 0 0 16px 0;
    line-height: 1.1;
    letter-spacing: -0.5px;
  }

  .ai-hero-tagline-{{ ai_gen_id }} {
    font-size: {{ block.settings.tagline_size }}px;
    color: {{ block.settings.tagline_color }};
    margin: 0 0 12px 0;
    line-height: 1.5;
    font-weight: 500;
  }

  .ai-hero-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.description_color }};
    margin: 0 0 32px 0;
    line-height: 1.7;
    max-width: 540px;
  }

  .ai-hero-trust-badges-{{ ai_gen_id }} {
    display: flex;
    gap: 24px;
    margin-bottom: 36px;
    flex-wrap: wrap;
  }

  .ai-hero-badge-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    padding: 16px 20px;
    background: {{ block.settings.badge_bg }};
    backdrop-filter: blur(10px);
    border-radius: {{ block.settings.badge_radius }}px;
    border: 1px solid {{ block.settings.badge_border }};
    min-width: 140px;
  }

  .ai-hero-badge-value-{{ ai_gen_id }} {
    font-size: 28px;
    font-weight: 800;
    color: {{ block.settings.badge_value_color }};
    line-height: 1;
    margin-bottom: 6px;
  }

  .ai-hero-badge-label-{{ ai_gen_id }} {
    font-size: 13px;
    color: {{ block.settings.badge_label_color }};
    font-weight: 500;
    line-height: 1.3;
  }

  .ai-hero-buttons-{{ ai_gen_id }} {
    display: flex;
    gap: 16px;
    flex-wrap: wrap;
  }

  .ai-hero-btn-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: {{ block.settings.btn_padding_v }}px {{ block.settings.btn_padding_h }}px;
    border-radius: {{ block.settings.btn_radius }}px;
    font-size: {{ block.settings.btn_font_size }}px;
    font-weight: 600;
    text-decoration: none;
    cursor: pointer;
    border: none;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
    white-space: nowrap;
  }

  .ai-hero-btn-primary-{{ ai_gen_id }} {
    background: {{ block.settings.primary_btn_bg }};
    color: {{ block.settings.primary_btn_text }};
    box-shadow: 0 6px 20px {{ block.settings.primary_btn_shadow }};
  }

  .ai-hero-btn-primary-{{ ai_gen_id }}:hover {
    background: {{ block.settings.primary_btn_hover_bg }};
    color: {{ block.settings.primary_btn_hover_text }};
    transform: translateY(-4px) scale(1.03);
    box-shadow: 0 12px 35px {{ block.settings.primary_btn_shadow }};
  }

  .ai-hero-btn-primary-{{ ai_gen_id }}:active {
    transform: translateY(-2px) scale(0.98);
  }

  .ai-hero-btn-secondary-{{ ai_gen_id }} {
    background: {{ block.settings.secondary_btn_bg }};
    color: {{ block.settings.secondary_btn_text }};
    border: 2px solid {{ block.settings.secondary_btn_border }};
    box-shadow: 0 6px 20px {{ block.settings.secondary_btn_shadow }};
  }

  .ai-hero-btn-secondary-{{ ai_gen_id }}:hover {
    background: {{ block.settings.secondary_btn_hover_bg }};
    color: {{ block.settings.secondary_btn_hover_text }};
    border-color: {{ block.settings.secondary_btn_hover_border }};
    transform: translateY(-4px) scale(1.03);
    box-shadow: 0 12px 35px {{ block.settings.secondary_btn_shadow }};
  }

  .ai-hero-btn-secondary-{{ ai_gen_id }}:active {
    transform: translateY(-2px) scale(0.98);
  }

  .ai-hero-carousel-dots-{{ ai_gen_id }} {
    display: flex;
    gap: 10px;
    justify-content: center;
    margin-top: 30px;
  }

  .ai-hero-dot-{{ ai_gen_id }} {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background: {{ block.settings.dot_color }};
    opacity: 0.3;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    border: none;
    padding: 0;
  }

  .ai-hero-dot-{{ ai_gen_id }}:hover {
    opacity: 0.6;
    transform: scale(1.3);
  }

  .ai-hero-dot-{{ ai_gen_id }}.active {
    opacity: 1;
    width: 32px;
    border-radius: 5px;
    background: {{ block.settings.dot_active_color }};
  }

  @media screen and (max-width: 990px) {
    .ai-hero-container-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 40px;
      padding: 40px 20px;
    }

    .ai-hero-carousel-side-{{ ai_gen_id }} {
      height: 500px;
      order: 2;
    }

    .ai-hero-content-side-{{ ai_gen_id }} {
      order: 1;
      text-align: center;
      padding: 20px 0;
    }

    .ai-hero-company-name-{{ ai_gen_id }} {
      font-size: {{ block.settings.company_name_size | times: 0.75 }}px;
    }

    .ai-hero-tagline-{{ ai_gen_id }} {
      font-size: {{ block.settings.tagline_size | times: 0.9 }}px;
    }

    .ai-hero-description-{{ ai_gen_id }} {
      margin-left: auto;
      margin-right: auto;
    }

    .ai-hero-trust-badges-{{ ai_gen_id }} {
      justify-content: center;
    }

    .ai-hero-buttons-{{ ai_gen_id }} {
      justify-content: center;
    }

    .ai-hero-card-{{ ai_gen_id }} {
      max-width: 380px;
      height: 480px;
    }
  }

  @media screen and (max-width: 749px) {
    .ai-hero-carousel-side-{{ ai_gen_id }} {
      height: 420px;
    }

    .ai-hero-card-{{ ai_gen_id }} {
      max-width: 320px;
      height: 400px;
    }

    .ai-hero-trust-badges-{{ ai_gen_id }} {
      gap: 12px;
    }

    .ai-hero-badge-{{ ai_gen_id }} {
      min-width: 120px;
      padding: 12px 16px;
    }

    .ai-hero-badge-value-{{ ai_gen_id }} {
      font-size: 24px;
    }

    .ai-hero-badge-label-{{ ai_gen_id }} {
      font-size: 12px;
    }

    .ai-hero-buttons-{{ ai_gen_id }} {
      flex-direction: column;
      width: 100%;
      max-width: 320px;
      margin: 0 auto;
    }

    .ai-hero-btn-{{ ai_gen_id }} {
      width: 100%;
    }
  }

  @media (hover: none) and (pointer: coarse) {
    .ai-hero-card-{{ ai_gen_id }}:active .ai-hero-card-inner-{{ ai_gen_id }} {
      transform: translateY(-15px) rotateX(10deg);
      box-shadow: 0 50px 120px {{ block.settings.card_shadow }};
    }

    .ai-hero-card-{{ ai_gen_id }}:active .ai-hero-card-img-{{ ai_gen_id }} {
      transform: scale(1.1);
    }

    .ai-hero-btn-{{ ai_gen_id }}:active {
      transform: scale(0.96);
    }
  }
{% endstyle %}

