{% doc %}
  @prompt
    Create a modern, premium Shopify footer section with a dark navy blue background and rounded top corners.
    Layout should be wide and well-spaced, divided into 4 columns:
    
    SHOP – product category links (All Products, Earbuds, Headphones, Power Bank, Charger, etc.)
    
    HELP – support and policy links (Blogs, Privacy Policy, Terms & Conditions, Shipping & Return Policy, etc.)
    
    COMPANY – brand-related links (About Us, Careers, Express Delivery, Official Brand Outlet, News & Updates)
    
    Brand Info Section on the right with company logo at top, social media icons (Facebook, Instagram, YouTube, LinkedIn, X), contact details (phone & email), and a newsletter subscription box with email input and submit button.
    
    Use clean typography, white text, soft contrast, and consistent spacing.
    Add a vertical divider line before the brand info section.
    Footer should be fully responsive, professional, and optimized for mobile accessories e-commerce websites.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-footer-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    background-color: {{ block.settings.background_color }};
    color: {{ block.settings.text_color }};
    border-radius: {{ block.settings.border_radius }}px {{ block.settings.border_radius }}px 0 0;
    padding: {{ block.settings.padding_top }}px 0 {{ block.settings.padding_bottom }}px;
  }

  .ai-footer-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-footer-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: {{ block.settings.column_gap }}px;
    align-items: start;
  }

  .ai-footer-column-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.link_spacing }}px;
  }

  .ai-footer-column-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    font-weight: {{ block.settings.heading_weight }};
    color: {{ block.settings.heading_color }};
    margin: 0 0 {{ block.settings.heading_margin }}px;
    text-transform: {{ block.settings.heading_transform }};
    letter-spacing: {{ block.settings.heading_letter_spacing }}px;
  }

  .ai-footer-link-{{ ai_gen_id }} {
    color: {{ block.settings.link_color }};
    text-decoration: none;
    font-size: {{ block.settings.link_size }}px;
    transition: color 0.3s ease, opacity 0.3s ease;
    opacity: {{ block.settings.link_opacity | divided_by: 100.0 }};
    line-height: 1.6;
  }

  .ai-footer-link-{{ ai_gen_id }}:hover {
    color: {{ block.settings.link_hover_color }};
    opacity: 1;
  }

  .ai-footer-brand-section-{{ ai_gen_id }} {
    position: relative;
    padding-left: {{ block.settings.divider_spacing }}px;
  }

  .ai-footer-brand-section-{{ ai_gen_id }}::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: {{ block.settings.divider_width }}px;
    background-color: {{ block.settings.divider_color }};
    opacity: {{ block.settings.divider_opacity | divided_by: 100.0 }};
  }

  .ai-footer-logo-{{ ai_gen_id }} {
    margin-bottom: {{ block.settings.logo_margin }}px;
  }

  .ai-footer-logo-{{ ai_gen_id }} img {
    max-width: {{ block.settings.logo_width }}px;
    height: auto;
    display: block;
  }

  .ai-footer-social-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.social_gap }}px;
    margin-bottom: {{ block.settings.social_margin }}px;
    flex-wrap: wrap;
  }

  .ai-footer-social-link-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: center;
    width: {{ block.settings.social_icon_size }}px;
    height: {{ block.settings.social_icon_size }}px;
    background-color: {{ block.settings.social_bg_color }};
    border-radius: {{ block.settings.social_border_radius }}px;
    color: {{ block.settings.social_icon_color }};
    transition: all 0.3s ease;
    text-decoration: none;
  }

  .ai-footer-social-link-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.social_hover_bg }};
    color: {{ block.settings.social_hover_color }};
    transform: translateY(-2px);
  }

  .ai-footer-social-link-{{ ai_gen_id }} svg {
    width: {{ block.settings.social_icon_size | times: 0.5 }}px;
    height: {{ block.settings.social_icon_size | times: 0.5 }}px;
  }

  .ai-footer-contact-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.contact_gap }}px;
    margin-bottom: {{ block.settings.contact_margin }}px;
  }

  .ai-footer-contact-item-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 10px;
    font-size: {{ block.settings.contact_size }}px;
    color: {{ block.settings.text_color }};
    opacity: {{ block.settings.link_opacity | divided_by: 100.0 }};
  }

  .ai-footer-contact-item-{{ ai_gen_id }} svg {
    width: 18px;
    height: 18px;
    flex-shrink: 0;
  }

  .ai-footer-contact-item-{{ ai_gen_id }} a {
    color: {{ block.settings.link_color }};
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .ai-footer-contact-item-{{ ai_gen_id }} a:hover {
    color: {{ block.settings.link_hover_color }};
  }

  .ai-footer-newsletter-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .ai-footer-newsletter-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.newsletter_title_size }}px;
    font-weight: 600;
    color: {{ block.settings.heading_color }};
    margin: 0;
  }

  .ai-footer-newsletter-form-{{ ai_gen_id }} {
    display: flex;
    gap: 8px;
  }

  .ai-footer-newsletter-input-{{ ai_gen_id }} {
    flex: 1;
    padding: {{ block.settings.input_padding }}px;
    background-color: {{ block.settings.input_bg_color }};
    border: {{ block.settings.input_border_width }}px solid {{ block.settings.input_border_color }};
    border-radius: {{ block.settings.input_border_radius }}px;
    color: {{ block.settings.input_text_color }};
    font-size: {{ block.settings.input_font_size }}px;
    outline: none;
    transition: all 0.3s ease;
  }

  .ai-footer-newsletter-input-{{ ai_gen_id }}::placeholder {
    color: {{ block.settings.input_placeholder_color }};
    opacity: 0.6;
  }

  .ai-footer-newsletter-input-{{ ai_gen_id }}:focus {
    border-color: {{ block.settings.input_focus_border }};
    background-color: {{ block.settings.input_focus_bg }};
  }

  .ai-footer-newsletter-button-{{ ai_gen_id }} {
    padding: {{ block.settings.input_padding }}px {{ block.settings.button_padding }}px;
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    border: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    white-space: nowrap;
  }

  .ai-footer-newsletter-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_bg }};
    transform: translateY(-1px);
  }

  .ai-footer-newsletter-message-{{ ai_gen_id }} {
    font-size: 13px;
    margin-top: 8px;
  }

  .ai-footer-newsletter-success-{{ ai_gen_id }} {
    color: {{ block.settings.success_color }};
  }

  .ai-footer-newsletter-error-{{ ai_gen_id }} {
    color: {{ block.settings.error_color }};
  }

  @media screen and (max-width: 1024px) {
    .ai-footer-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(2, 1fr);
      gap: 40px;
    }

    .ai-footer-brand-section-{{ ai_gen_id }} {
      grid-column: 1 / -1;
      padding-left: 0;
      padding-top: 40px;
      margin-top: 40px;
      border-top: {{ block.settings.divider_width }}px solid {{ block.settings.divider_color }};
    }

    .ai-footer-brand-section-{{ ai_gen_id }}::before {
      display: none;
    }
  }

  @media screen and (max-width: 640px) {
    .ai-footer-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 32px;
    }

    .ai-footer-newsletter-form-{{ ai_gen_id }} {
      flex-direction: column;
    }

    .ai-footer-newsletter-button-{{ ai_gen_id }} {
      width: 100%;
    }

    .ai-footer-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_top | times: 0.7 }}px 0 {{ block.settings.padding_bottom | times: 0.7 }}px;
    }
  }
