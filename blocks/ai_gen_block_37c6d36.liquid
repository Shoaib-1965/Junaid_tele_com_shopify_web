<script>
  (function() {
    class FooterSection{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.init();
      }

      init() {
        const form = this.querySelector('.ai-footer-newsletter-form-{{ ai_gen_id }}');
        if (form) {
          form.addEventListener('submit', function(e) {
            const input = form.querySelector('input[type="email"]');
            if (input && !input.value.trim()) {
              e.preventDefault();
            }
          });
        }
      }
    }

    customElements.define('footer-section-{{ ai_gen_id }}', FooterSection{{ ai_gen_id }});
  })();
</script>

