{% doc %}
  @prompt
    Create a slim Trust Signals strip just before the footer of the Shopify page.
    Display 3 icons with short bold text below each:
    üîç Live Repair View ‚Äì Watch us fix it
    üîí No Data Theft Guarantee ‚Äì Your photos are safe
    üì¶ Wholesale Parts Used ‚Äì Best price guaranteed
    Use minimal design, soft background color, and strong icons.
    Purpose is to remove fear, build trust, and confirm professionalism before customer contact.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-trust-signals-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.padding_vertical }}px 20px;
  }

  .ai-trust-signals-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: {{ block.settings.gap }}px;
    flex-wrap: wrap;
  }

  .ai-trust-signal-item-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: {{ block.settings.icon_text_gap }}px;
    flex: 1;
    min-width: 200px;
    max-width: 300px;
  }

  .ai-trust-signal-icon-{{ ai_gen_id }} {
    font-size: {{ block.settings.icon_size }}px;
    line-height: 1;
  }

  .ai-trust-signal-text-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    font-weight: {{ block.settings.text_weight }};
    line-height: 1.3;
    margin: 0;
  }

  @media screen and (max-width: 749px) {
    .ai-trust-signals-container-{{ ai_gen_id }} {
      gap: {{ block.settings.gap_mobile }}px;
    }

    .ai-trust-signal-item-{{ ai_gen_id }} {
      min-width: 150px;
    }

    .ai-trust-signal-icon-{{ ai_gen_id }} {
      font-size: {{ block.settings.icon_size | times: 0.8 }}px;
    }

    .ai-trust-signal-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-trust-signals-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-trust-signals-container-{{ ai_gen_id }}">
    {% if block.settings.signal_1_enabled %}
      <div class="ai-trust-signal-item-{{ ai_gen_id }}">
        <div class="ai-trust-signal-icon-{{ ai_gen_id }}">{{ block.settings.signal_1_icon }}</div>
        <p class="ai-trust-signal-text-{{ ai_gen_id }}">{{ block.settings.signal_1_text }}</p>
      </div>
    {% endif %}

    {% if block.settings.signal_2_enabled %}
      <div class="ai-trust-signal-item-{{ ai_gen_id }}">
        <div class="ai-trust-signal-icon-{{ ai_gen_id }}">{{ block.settings.signal_2_icon }}</div>
        <p class="ai-trust-signal-text-{{ ai_gen_id }}">{{ block.settings.signal_2_text }}</p>
      </div>
    {% endif %}

    {% if block.settings.signal_3_enabled %}
      <div class="ai-trust-signal-item-{{ ai_gen_id }}">
        <div class="ai-trust-signal-icon-{{ ai_gen_id }}">{{ block.settings.signal_3_icon }}</div>
        <p class="ai-trust-signal-text-{{ ai_gen_id }}">{{ block.settings.signal_3_text }}</p>
      </div>
    {% endif %}
  </div>
</div>

