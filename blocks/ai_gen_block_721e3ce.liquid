{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-3d-slider-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    position: relative;
    padding: {{ block.settings.section_padding }}px 0;
    background: {{ block.settings.background_color }};
    overflow: hidden;
  }

  .ai-3d-slider-container-{{ ai_gen_id }} {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-3d-slider-header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 60px;
  }

  .ai-3d-slider-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0 0 16px;
    font-weight: 700;
  }

  .ai-3d-slider-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    color: {{ block.settings.subtitle_color }};
    margin: 0;
  }

  .ai-3d-slider-viewport-{{ ai_gen_id }} {
    position: relative;
    perspective: {{ block.settings.perspective }}px;
    perspective-origin: 50% 50%;
    min-height: 500px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-3d-slider-track-{{ ai_gen_id }} {
    display: flex;
    gap: 40px;
    transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
    transform-style: preserve-3d;
  }

  .ai-3d-slider-slide-{{ ai_gen_id }} {
    flex-shrink: 0;
    width: {{ block.settings.slide_width }}px;
    position: relative;
    transform-style: preserve-3d;
    transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .ai-3d-slider-pod-{{ ai_gen_id }} {
    position: relative;
    background: {{ block.settings.pod_background }};
    border-radius: {{ block.settings.pod_radius }}px;
    padding: 40px 30px;
    box-shadow: 
      0 {{ block.settings.shadow_depth }}px {{ block.settings.shadow_blur }}px {{ block.settings.shadow_color }},
      0 0 40px {{ block.settings.glow_color }};
    border: 1px solid {{ block.settings.pod_border_color }};
    transform: translateZ(0);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .ai-3d-slider-slide-{{ ai_gen_id }}.active .ai-3d-slider-pod-{{ ai_gen_id }} {
    transform: translateZ({{ block.settings.active_depth }}px) scale(1.05);
    box-shadow: 
      0 {{ block.settings.shadow_depth | times: 1.5 }}px {{ block.settings.shadow_blur | times: 1.5 }}px {{ block.settings.shadow_color }},
      0 0 60px {{ block.settings.glow_color }};
  }

  .ai-3d-slider-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: 280px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 24px;
    background: {{ block.settings.image_bg }};
    border-radius: {{ block.settings.image_radius }}px;
    overflow: hidden;
  }

  .ai-3d-slider-image-{{ ai_gen_id }} {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
    transition: transform 0.4s ease;
  }

  .ai-3d-slider-slide-{{ ai_gen_id }}.active .ai-3d-slider-image-{{ ai_gen_id }} {
    transform: scale(1.1);
  }

  .ai-3d-slider-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: {{ block.settings.placeholder_bg }};
  }

  .ai-3d-slider-image-placeholder-{{ ai_gen_id }} svg {
    width: 120px;
    height: 120px;
    opacity: 0.3;
  }

  .ai-3d-slider-content-{{ ai_gen_id }} {
    text-align: center;
  }

  .ai-3d-slider-product-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_title_size }}px;
    color: {{ block.settings.product_title_color }};
    margin: 0 0 12px;
    font-weight: 600;
    min-height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-3d-slider-product-price-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_price_size }}px;
    color: {{ block.settings.product_price_color }};
    margin: 0 0 20px;
    font-weight: 700;
  }

  .ai-3d-slider-product-link-{{ ai_gen_id }} {
    display: inline-block;
    padding: 12px 32px;
    background: {{ block.settings.cta_button_bg }};
    color: {{ block.settings.cta_button_text }};
    text-decoration: none;
    border-radius: {{ block.settings.cta_button_radius }}px;
    font-size: 14px;
    font-weight: 600;
    transition: all 0.3s ease;
    border: 1px solid {{ block.settings.cta_button_border }};
  }

  .ai-3d-slider-product-link-{{ ai_gen_id }}:hover {
    background: {{ block.settings.cta_button_hover_bg }};
    color: {{ block.settings.cta_button_hover_text }};
    transform: translateY(-2px);
    box-shadow: 0 4px 12px {{ block.settings.cta_button_shadow }};
  }

  .ai-3d-slider-empty-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: {{ block.settings.subtitle_color }};
    font-size: 16px;
  }

  .ai-3d-slider-controls-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 20px;
    margin-top: 50px;
  }

  .ai-3d-slider-nav-{{ ai_gen_id }} {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    background: {{ block.settings.nav_bg }};
    border: 1px solid {{ block.settings.nav_border }};
    color: {{ block.settings.nav_color }};
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 4px 12px {{ block.settings.nav_shadow }};
  }

  .ai-3d-slider-nav-{{ ai_gen_id }}:hover {
    background: {{ block.settings.nav_hover_bg }};
    color: {{ block.settings.nav_hover_color }};
    transform: scale(1.1);
  }

  .ai-3d-slider-nav-{{ ai_gen_id }}:disabled {
    opacity: 0.3;
    cursor: not-allowed;
    transform: scale(1);
  }

  .ai-3d-slider-dots-{{ ai_gen_id }} {
    display: flex;
    gap: 12px;
  }

  .ai-3d-slider-dot-{{ ai_gen_id }} {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: {{ block.settings.dot_bg }};
    border: 2px solid {{ block.settings.dot_border }};
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .ai-3d-slider-dot-{{ ai_gen_id }}.active {
    background: {{ block.settings.dot_active_bg }};
    transform: scale(1.3);
    box-shadow: 0 0 12px {{ block.settings.dot_active_bg }};
  }

  @media screen and (max-width: 749px) {
