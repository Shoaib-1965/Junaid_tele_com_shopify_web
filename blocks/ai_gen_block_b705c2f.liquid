{% doc %}
  @prompt
    Create a simple product slider for a Shopify webpage of Junaid Telecom.
    
    Section Title:
    “Repair Accessories – Free Installation Included”
    
    Display products inside clean hover-effect cards, where each card shows the product image, name, and price.
    
    Cards should have soft shadows and a smooth hover effect (slight shadow or scale only, no 3D movement).
    
    Add a visible badge on each product card:
    “Free Installation”
    
    Buttons on each card:
    
    View Product (opens product page)
    
    Add to Cart (adds instantly without reload)
    
    Slider must be mobile-friendly, swipe-enabled, fast, and minimal.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-product-slider-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding: {{ block.settings.section_padding }}px 0;
    background-color: {{ block.settings.background_color }};
  }

  .ai-product-slider-container-{{ ai_gen_id }} {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-product-slider-header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 40px;
  }

  .ai-product-slider-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0;
    font-weight: 700;
  }

  .ai-product-slider-wrapper-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
    margin: 0 -10px;
  }

  .ai-product-slider-track-{{ ai_gen_id }} {
    display: flex;
    gap: 20px;
    padding: 10px;
    overflow-x: auto;
    scroll-behavior: smooth;
    scrollbar-width: none;
    -ms-overflow-style: none;
    -webkit-overflow-scrolling: touch;
  }

  .ai-product-slider-track-{{ ai_gen_id }}::-webkit-scrollbar {
    display: none;
  }

  .ai-product-card-{{ ai_gen_id }} {
    flex: 0 0 calc(25% - 15px);
    min-width: 280px;
    background: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    box-shadow: {{ block.settings.card_shadow }};
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    position: relative;
  }

  .ai-product-card-{{ ai_gen_id }}:hover {
    transform: {{ block.settings.hover_effect }};
    box-shadow: {{ block.settings.card_hover_shadow }};
  }

  .ai-product-card-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-top: 100%;
    overflow: hidden;
    background-color: #f5f5f5;
  }

  .ai-product-card-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-product-card-badge-{{ ai_gen_id }} {
    position: absolute;
    top: 12px;
    right: 12px;
    background-color: {{ block.settings.badge_background }};
    color: {{ block.settings.badge_text_color }};
    padding: 6px 12px;
    border-radius: {{ block.settings.badge_border_radius }}px;
    font-size: 12px;
    font-weight: 600;
    z-index: 2;
  }

  .ai-product-card-content-{{ ai_gen_id }} {
    padding: 20px;
  }

  .ai-product-card-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_title_size }}px;
    color: {{ block.settings.product_title_color }};
    margin: 0 0 10px;
    font-weight: 600;
    line-height: 1.3;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .ai-product-card-price-{{ ai_gen_id }} {
    font-size: {{ block.settings.price_size }}px;
    color: {{ block.settings.price_color }};
    margin: 0 0 16px;
    font-weight: 700;
  }

  .ai-product-card-buttons-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .ai-product-card-button-{{ ai_gen_id }} {
    width: 100%;
    padding: 12px 20px;
    border: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: 14px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    text-decoration: none;
    text-align: center;
    display: inline-block;
  }

  .ai-product-card-button-primary-{{ ai_gen_id }} {
    background-color: {{ block.settings.primary_button_bg }};
    color: {{ block.settings.primary_button_text }};
  }

  .ai-product-card-button-primary-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.primary_button_hover_bg }};
  }

  .ai-product-card-button-secondary-{{ ai_gen_id }} {
    background-color: {{ block.settings.secondary_button_bg }};
    color: {{ block.settings.secondary_button_text }};
    border: 1px solid {{ block.settings.secondary_button_border }};
  }

  .ai-product-card-button-secondary-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.secondary_button_hover_bg }};
  }

  .ai-product-card-button-secondary-{{ ai_gen_id }}:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .ai-product-slider-nav-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    gap: 10px;
    margin-top: 30px;
  }

  .ai-product-slider-nav-button-{{ ai_gen_id }} {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background-color: {{ block.settings.nav_button_bg }};
    color: {{ block.settings.nav_button_color }};
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
  }

  .ai-product-slider-nav-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.nav_button_hover_bg }};
  }

  .ai-product-slider-nav-button-{{ ai_gen_id }}:disabled {
    opacity: 0.3;
    cursor: not-allowed;
  }

  .ai-product-empty-state-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: #666;
  }

  .ai-product-empty-state-{{ ai_gen_id }} svg {
    width: 100px;
    height: 100px;
    margin-bottom: 20px;
    opacity: 0.3;
  }

  @media screen and (max-width: 1024px) {
    .ai-product-card-{{ ai_gen_id }} {
      flex: 0 0 calc(33.333% - 14px);
    }
  }

  @media screen and (max-width: 768px) {
    .ai-product-card-{{ ai_gen_id }} {
      flex: 0 0 calc(50% - 10px);
      min-width: 200px;
    }

