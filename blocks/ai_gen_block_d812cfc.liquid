{% doc %}
  @prompt
    Design a modern Contact Us section for a Shopify website with a dark-tech and clean professional UI.
    Use a glassmorphism style contact form with rounded corners, soft neon blue glow shadows, and smooth hover + focus animations on input fields.
    On hover or focus, fields should show animated blue light borders, subtle pulse shadows, and floating label effects.
    Add a gradient blue submit button with ripple hover animation.
    Background should be light or dark with soft blur, minimal noise texture, and depth shadows.
    Typography must be modern, readable, and premium.
    Overall look: high-tech, futuristic, elegant, mobile-friendly, conversion-focused, perfect for a professional Shopify store.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-contact-section-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    position: relative;
    padding: {{ block.settings.section_padding_top }}px 20px {{ block.settings.section_padding_bottom }}px;
    background: {{ block.settings.background_color }};
    overflow: hidden;
  }

  .ai-contact-section-{{ ai_gen_id }}::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: 
      radial-gradient(circle at 20% 30%, {{ block.settings.accent_glow_color }}15 0%, transparent 50%),
      radial-gradient(circle at 80% 70%, {{ block.settings.accent_glow_color }}10 0%, transparent 50%);
    pointer-events: none;
    z-index: 0;
  }

  .ai-contact-section-{{ ai_gen_id }}::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: url("data:image/svg+xml,%3Csvg width='100' height='100' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100' height='100' filter='url(%23noise)' opacity='0.03'/%3E%3C/svg%3E");
    opacity: {{ block.settings.noise_opacity | divided_by: 100.0 }};
    pointer-events: none;
    z-index: 1;
  }

  .ai-contact-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    position: relative;
    z-index: 2;
  }

  .ai-contact-header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 50px;
  }

  .ai-contact-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    font-weight: 700;
    color: {{ block.settings.title_color }};
    margin: 0 0 16px;
    letter-spacing: -0.02em;
    line-height: 1.2;
  }

  .ai-contact-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    color: {{ block.settings.subtitle_color }};
    margin: 0;
    line-height: 1.6;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .ai-contact-form-wrapper-{{ ai_gen_id }} {
    background: {{ block.settings.form_background }};
    backdrop-filter: blur({{ block.settings.blur_strength }}px);
    border-radius: {{ block.settings.border_radius }}px;
    padding: {{ block.settings.form_padding }}px;
    border: 1px solid {{ block.settings.form_border_color }};
    box-shadow: 
      0 8px 32px {{ block.settings.shadow_color }}{{ block.settings.shadow_opacity }},
      0 0 0 1px {{ block.settings.accent_glow_color }}10,
      inset 0 1px 0 {{ block.settings.form_border_color }}40;
    position: relative;
    overflow: hidden;
  }

  .ai-contact-form-wrapper-{{ ai_gen_id }}::before {
    content: '';
    position: absolute;
    top: -2px;
    left: -2px;
    right: -2px;
    bottom: -2px;
    background: linear-gradient(135deg, {{ block.settings.accent_glow_color }}20 0%, transparent 50%, {{ block.settings.accent_glow_color }}10 100%);
    border-radius: {{ block.settings.border_radius }}px;
    opacity: 0;
    transition: opacity 0.4s ease;
    pointer-events: none;
    z-index: -1;
  }

  .ai-contact-form-wrapper-{{ ai_gen_id }}:hover::before {
    opacity: 1;
  }

  .ai-contact-form-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  .ai-contact-field-group-{{ ai_gen_id }} {
    position: relative;
  }

  .ai-contact-label-{{ ai_gen_id }} {
    position: absolute;
    left: 18px;
    top: 50%;
    transform: translateY(-50%);
    font-size: 15px;
    color: {{ block.settings.label_color }};
    pointer-events: none;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    background: transparent;
    padding: 0 4px;
    z-index: 1;
  }

  .ai-contact-label-textarea-{{ ai_gen_id }} {
    top: 20px;
    transform: translateY(0);
  }

  .ai-contact-input-{{ ai_gen_id }},
  .ai-contact-textarea-{{ ai_gen_id }} {
    width: 100%;
    padding: 16px 18px;
    background: {{ block.settings.input_background }};
    border: 1px solid {{ block.settings.input_border_color }};
    border-radius: {{ block.settings.input_border_radius }}px;
    color: {{ block.settings.input_text_color }};
    font-size: 15px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    outline: none;
    position: relative;
    z-index: 0;
  }

  .ai-contact-textarea-{{ ai_gen_id }} {
    min-height: 140px;
    resize: vertical;
    padding-top: 16px;
  }

  .ai-contact-input-{{ ai_gen_id }}:focus,
  .ai-contact-textarea-{{ ai_gen_id }}:focus,
  .ai-contact-input-{{ ai_gen_id }}:not(:placeholder-shown),
  .ai-contact-textarea-{{ ai_gen_id }}:not(:placeholder-shown) {
    border-color: {{ block.settings.accent_glow_color }};
    background: {{ block.settings.input_focus_background }};
    box-shadow: 
      0 0 0 3px {{ block.settings.accent_glow_color }}15,
      0 0 20px {{ block.settings.accent_glow_color }}25,
      0 4px 12px {{ block.settings.shadow_color }}20;
  }

  .ai-contact-input-{{ ai_gen_id }}:focus ~ .ai-contact-label-{{ ai_gen_id }},
  .ai-contact-input-{{ ai_gen_id }}:not(:placeholder-shown) ~ .ai-contact-label-{{ ai_gen_id }},
  .ai-contact-textarea-{{ ai_gen_id }}:focus ~ .ai-contact-label-{{ ai_gen_id }},
  .ai-contact-textarea-{{ ai_gen_id }}:not(:placeholder-shown) ~ .ai-contact-label-{{ ai_gen_id }} {
    top: -10px;
    font-size: 12px;
    color: {{ block.settings.accent_glow_color }};
    background: {{ block.settings.form_background }};
    font-weight: 600;
    letter-spacing: 0.02em;
  }

  .ai-contact-input-{{ ai_gen_id }}::placeholder,
  .ai-contact-textarea-{{ ai_gen_id }}::placeholder {
    color: transparent;
  }

  .ai-contact-submit-wrapper-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
  }

  .ai-contact-submit-{{ ai_gen_id }} {
    width: 100%;
    padding: 18px 32px;
    background: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    border: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    position: relative;
    overflow: hidden;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    letter-spacing: 0.03em;
    text-transform: uppercase;
    box-shadow: 
      0 4px 15px {{ block.settings.button_background }}40,
      0 0 20px {{ block.settings.accent_glow_color }}30;
  }

  .ai-contact-submit-{{ ai_gen_id }}::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    border-radius: 50%;
    background: {{ block.settings.button_hover_background }};
    transform: translate(-50%, -50%);
    transition: width 0.6s ease, height 0.6s ease;
  }

  .ai-contact-submit-{{ ai_gen_id }}:hover::before {
    width: 300%;
    height: 300%;
  }

  .ai-contact-submit-{{ ai_gen_id }}:hover {
    transform: translateY(-2px);
    box-shadow: 
      0 8px 25px {{ block.settings.button_background }}50,
      0 0 30px {{ block.settings.accent_glow_color }}50;
  }

  .ai-contact-submit-{{ ai_gen_id }}:active {
    transform: translateY(0);
  }

  .ai-contact-submit-text-{{ ai_gen_id }} {
    position: relative;
    z-index: 1;
  }

  .ai-contact-success-{{ ai_gen_id }},
  .ai-contact-error-{{ ai_gen_id }} {
    padding: 16px 20px;
    border-radius: {{ block.settings.input_border_radius }}px;
    margin-top: 20px;
    font-size: 14px;
    text-align: center;
    border: 1px solid;
  }

  .ai-contact-success-{{ ai_gen_id }} {
    background: {{ block.settings.success_background }};
    color: {{ block.settings.success_text_color }};
    border-color: {{ block.settings.success_border_color }};
  }

  .ai-contact-error-{{ ai_gen_id }} {
    background: {{ block.settings.error_background }};
    color: {{ block.settings.error_text_color }};
    border-color: {{ block.settings.error_border_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-contact-section-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding_top | times: 0.6 }}px 16px {{ block.settings.section_padding_bottom | times: 0.6 }}px;
