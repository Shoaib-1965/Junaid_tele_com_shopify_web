{% endstyle %}

<contact-form-{{ ai_gen_id }} class="ai-contact-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-contact-container-{{ ai_gen_id }}">
    <div class="ai-contact-header-{{ ai_gen_id }}">
      {% if block.settings.title != blank %}
        <h2 class="ai-contact-title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
      {% endif %}
      {% if block.settings.subtitle != blank %}
        <p class="ai-contact-subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</p>
      {% endif %}
    </div>

    <div class="ai-contact-form-wrapper-{{ ai_gen_id }}">
      {%- form 'contact' -%}
        <div class="ai-contact-form-{{ ai_gen_id }}">
          <div class="ai-contact-field-group-{{ ai_gen_id }}">
            <input
              type="text"
              name="contact[name]"
              id="contact-name-{{ ai_gen_id }}"
              class="ai-contact-input-{{ ai_gen_id }}"
              value="{{ form.name }}"
              placeholder=" "
              required
              aria-required="true"
              {% if form.errors %}
                aria-invalid="true"
              {% endif %}
            >
            <label for="contact-name-{{ ai_gen_id }}" class="ai-contact-label-{{ ai_gen_id }}">
              {{ block.settings.name_label }}
            </label>
          </div>

          <div class="ai-contact-field-group-{{ ai_gen_id }}">
            <input
              type="email"
              name="contact[email]"
              id="contact-email-{{ ai_gen_id }}"
              class="ai-contact-input-{{ ai_gen_id }}"
              value="{{ form.email }}"
              placeholder=" "
              required
              aria-required="true"
              autocomplete="email"
              {% if form.errors %}
                aria-invalid="true"
              {% endif %}
            >
            <label for="contact-email-{{ ai_gen_id }}" class="ai-contact-label-{{ ai_gen_id }}">
              {{ block.settings.email_label }}
            </label>
          </div>

          {% if block.settings.show_phone %}
            <div class="ai-contact-field-group-{{ ai_gen_id }}">
              <input
                type="tel"
                name="contact[phone]"
                id="contact-phone-{{ ai_gen_id }}"
                class="ai-contact-input-{{ ai_gen_id }}"
                value="{{ form.phone }}"
                placeholder=" "
                autocomplete="tel"
              >
              <label for="contact-phone-{{ ai_gen_id }}" class="ai-contact-label-{{ ai_gen_id }}">
                {{ block.settings.phone_label }}
              </label>
            </div>
          {% endif %}

          <div class="ai-contact-field-group-{{ ai_gen_id }}">
            <textarea
              name="contact[body]"
              id="contact-message-{{ ai_gen_id }}"
              class="ai-contact-textarea-{{ ai_gen_id }}"
              placeholder=" "
              required
              aria-required="true"
            >{{ form.body }}</textarea>
            <label for="contact-message-{{ ai_gen_id }}" class="ai-contact-label-{{ ai_gen_id }} ai-contact-label-textarea-{{ ai_gen_id }}">
              {{ block.settings.message_label }}
            </label>
          </div>

          <div class="ai-contact-submit-wrapper-{{ ai_gen_id }}">
            <button type="submit" class="ai-contact-submit-{{ ai_gen_id }}">
              <span class="ai-contact-submit-text-{{ ai_gen_id }}">{{ block.settings.submit_text }}</span>
            </button>
          </div>

          {%- if form.posted_successfully? -%}
            <div class="ai-contact-success-{{ ai_gen_id }}">
              {{ block.settings.success_message }}
            </div>
          {%- endif -%}

          {%- if form.errors -%}
            <div class="ai-contact-error-{{ ai_gen_id }}">
              {{ form.errors | default_errors }}
            </div>
          {%- endif -%}
        </div>
      {%- endform -%}
    </div>
  </div>
</contact-form-{{ ai_gen_id }}>

<script>
  (function() {
    class ContactForm{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.form = this.querySelector('form');
        this.inputs = this.querySelectorAll('.ai-contact-input-{{ ai_gen_id }}, .ai-contact-textarea-{{ ai_gen_id }}');
        
        this.inputs.forEach(input => {
          if (input.value) {
            input.setAttribute('data-filled', 'true');
          }

          input.addEventListener('input', function() {
            if (this.value) {
              this.setAttribute('data-filled', 'true');
            } else {
              this.removeAttribute('data-filled');
            }
          });
        });
      }
    }

    customElements.define('contact-form-{{ ai_gen_id }}', ContactForm{{ ai_gen_id }});
  })();
</script>

