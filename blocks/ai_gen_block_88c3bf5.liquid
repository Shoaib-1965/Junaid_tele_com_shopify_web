{% doc %}
  @prompt
    Create a custom Shopify marquee section with a heading text and a horizontal infinite scrolling marquee.
    Allow upload of up to 10 colorful brand logo images, displayed in large size, perfectly fitted inside floating cards.
    Cards should have a modern 3D look, soft depth shadows, smooth floating animation, and premium lighting.
    Use vibrant colors, smooth adjustable speed, pause on hover, fully responsive, and easy customization.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-marquee-container-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
    background: {{ block.settings.background_color }};
    overflow: hidden;
  }

  .ai-marquee-content-{{ ai_gen_id }} {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-marquee-heading-{{ ai_gen_id }} {
    text-align: {{ block.settings.heading_alignment }};
    margin: 0 0 {{ block.settings.heading_spacing }}px;
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    font-weight: 700;
  }

  .ai-marquee-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
    mask-image: linear-gradient(
      to right,
      transparent 0%,
      black {{ block.settings.fade_width }}%,
      black {{ 100 | minus: block.settings.fade_width }}%,
      transparent 100%
    );
  }

  .ai-marquee-track-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.card_gap }}px;
    width: fit-content;
  }

  .ai-marquee-track-{{ ai_gen_id }}.paused {
    animation-play-state: paused;
  }

  .ai-marquee-group-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.card_gap }}px;
    flex-shrink: 0;
  }

  .ai-marquee-card-{{ ai_gen_id }} {
    position: relative;
    width: {{ block.settings.card_width }}px;
    height: {{ block.settings.card_height }}px;
    background: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    padding: {{ block.settings.card_padding }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    box-shadow: 
      0 {{ block.settings.shadow_offset_y }}px {{ block.settings.shadow_blur }}px {{ block.settings.shadow_spread }}px {{ block.settings.shadow_color }},
      inset 0 1px 0 0 rgba(255, 255, 255, {{ block.settings.highlight_opacity | divided_by: 100.0 }}),
      inset 0 -1px 0 0 rgba(0, 0, 0, {{ block.settings.lowlight_opacity | divided_by: 100.0 }});
    border: {{ block.settings.card_border_width }}px solid {{ block.settings.card_border_color }};
    transition: transform 0.3s ease;
  }

  .ai-marquee-card-{{ ai_gen_id }}::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      135deg,
      rgba(255, 255, 255, {{ block.settings.gradient_opacity | divided_by: 100.0 }}) 0%,
      transparent 50%,
      rgba(0, 0, 0, {{ block.settings.gradient_opacity | divided_by: 200.0 }}) 100%
    );
    border-radius: {{ block.settings.card_border_radius }}px;
    pointer-events: none;
  }

  .ai-marquee-card-{{ ai_gen_id }}:hover {
    transform: translateY(-{{ block.settings.hover_lift }}px) scale({{ block.settings.hover_scale | divided_by: 100.0 }});
  }

  .ai-marquee-logo-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: contain;
    position: relative;
    z-index: 1;
  }

  .ai-marquee-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    z-index: 1;
  }

  .ai-marquee-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  @media screen and (max-width: 749px) {
    .ai-marquee-card-{{ ai_gen_id }} {
      width: {{ block.settings.card_width | times: 0.8 }}px;
      height: {{ block.settings.card_height | times: 0.8 }}px;
    }

    .ai-marquee-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.7 }}px;
    }
  }

  @keyframes ai-marquee-scroll-{{ ai_gen_id }} {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(calc(-100% - {{ block.settings.card_gap }}px));
    }
  }
{% endstyle %}

<brand-marquee-{{ ai_gen_id }}
  class="ai-marquee-container-{{ ai_gen_id }}"
  data-speed="{{ block.settings.scroll_speed }}"
  data-pause-on-hover="{{ block.settings.pause_on_hover }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-marquee-content-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-marquee-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}

    <div class="ai-marquee-wrapper-{{ ai_gen_id }}">
      <div class="ai-marquee-track-{{ ai_gen_id }}" data-marquee-track>
        <div class="ai-marquee-group-{{ ai_gen_id }}" data-marquee-group>
          {% for i in (1..10) %}
            {% liquid
              assign logo_key = 'logo_' | append: i
              assign logo = block.settings[logo_key]
            %}
            {% if logo != blank %}
              <div class="ai-marquee-card-{{ ai_gen_id }}">
                <img
                  src="{{ logo | image_url: width: 400 }}"
                  alt="{{ logo.alt | escape }}"
                  loading="lazy"
                  width="400"
                  height="400"
                  class="ai-marquee-logo-{{ ai_gen_id }}"
                >
              </div>
            {% endif %}
          {% endfor %}
        </div>
        <div class="ai-marquee-group-{{ ai_gen_id }}" data-marquee-group aria-hidden="true">
          {% for i in (1..10) %}
            {% liquid
              assign logo_key = 'logo_' | append: i
              assign logo = block.settings[logo_key]
            %}
            {% if logo != blank %}
              <div class="ai-marquee-card-{{ ai_gen_id }}">
                <img
                  src="{{ logo | image_url: width: 400 }}"
                  alt="{{ logo.alt | escape }}"
                  loading="lazy"
                  width="400"
                  height="400"
                  class="ai-marquee-logo-{{ ai_gen_id }}"
                >
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</brand-marquee-{{ ai_gen_id }}>

<script>
  (function() {
    class BrandMarquee{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.track = null;
        this.groups = null;
        this.speed = 30;
        this.pauseOnHover = true;
        this.animationDuration = 0;
      }

      connectedCallback() {
        this.track = this.querySelector('[data-marquee-track]');
        this.groups = this.querySelectorAll('[data-marquee-group]');
        this.speed = parseFloat(this.dataset.speed) || 30;
        this.pauseOnHover = this.dataset.pauseOnHover === 'true';

        if (this.track && this.groups.length > 0) {
          this.initMarquee();
          this.setupEventListeners();
        }
      }

      initMarquee() {
        const firstGroup = this.groups[0];
        const groupWidth = firstGroup.offsetWidth;
        
        this.animationDuration = groupWidth / this.speed;
        
        this.track.style.animation = `ai-marquee-scroll-{{ ai_gen_id }} ${this.animationDuration}s linear infinite`;
      }

      setupEventListeners() {
        if (this.pauseOnHover) {
          this.track.addEventListener('mouseenter', () => {
            this.track.classList.add('paused');
          });

          this.track.addEventListener('mouseleave', () => {
            this.track.classList.remove('paused');
          });
        }

        window.addEventListener('resize', () => {
          this.initMarquee();
        });
      }
    }

    customElements.define('brand-marquee-{{ ai_gen_id }}', BrandMarquee{{ ai_gen_id }});
  })();
</script>

