{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-product-accordion-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    max-width: 100%;
    padding: {{ block.settings.section_padding }}px 0;
  }

  .ai-accordion-container-{{ ai_gen_id }} {
    width: 100%;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
    overflow: hidden;
  }

  .ai-accordion-item-{{ ai_gen_id }} {
    border-bottom: 1px solid {{ block.settings.border_color }};
    transition: all 0.3s ease;
  }

  .ai-accordion-item-{{ ai_gen_id }}:last-child {
    border-bottom: none;
  }

  .ai-accordion-item-{{ ai_gen_id }}:hover {
    box-shadow: 0 4px 12px {{ block.settings.shadow_color }};
  }

  .ai-accordion-header-{{ ai_gen_id }} {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: {{ block.settings.item_padding }}px;
    background: none;
    border: none;
    cursor: pointer;
    text-align: left;
    transition: background-color 0.3s ease;
  }

  .ai-accordion-header-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.hover_background }};
  }

  .ai-accordion-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    font-weight: 600;
    color: {{ block.settings.title_color }};
    margin: 0;
  }

  .ai-accordion-icon-{{ ai_gen_id }} {
    width: 24px;
    height: 24px;
    transition: transform 0.3s ease;
    flex-shrink: 0;
    margin-left: 16px;
  }

  .ai-accordion-icon-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    stroke: {{ block.settings.icon_color }};
  }

  .ai-accordion-item-{{ ai_gen_id }}.active .ai-accordion-icon-{{ ai_gen_id }} {
    transform: rotate(180deg);
  }

  .ai-accordion-content-{{ ai_gen_id }} {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.4s ease, padding 0.4s ease;
  }

  .ai-accordion-item-{{ ai_gen_id }}.active .ai-accordion-content-{{ ai_gen_id }} {
    max-height: 1000px;
  }

  .ai-accordion-content-inner-{{ ai_gen_id }} {
    padding: 0 {{ block.settings.item_padding }}px {{ block.settings.item_padding }}px;
    font-size: {{ block.settings.content_size }}px;
    line-height: 1.6;
    color: {{ block.settings.content_color }};
  }

  .ai-reviews-section-{{ ai_gen_id }} {
    margin-top: {{ block.settings.reviews_spacing }}px;
    padding: {{ block.settings.reviews_padding }}px;
    background-color: {{ block.settings.reviews_background }};
    border-radius: {{ block.settings.border_radius }}px;
    text-align: center;
  }

  .ai-reviews-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.reviews_title_size }}px;
    font-weight: 600;
    color: {{ block.settings.title_color }};
    margin: 0 0 {{ block.settings.reviews_title_spacing }}px;
  }

  .ai-stars-container-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: {{ block.settings.star_spacing }}px;
  }

  .ai-star-{{ ai_gen_id }} {
    width: {{ block.settings.star_size }}px;
    height: {{ block.settings.star_size }}px;
    cursor: pointer;
    transition: all 0.3s ease;
    filter: drop-shadow(0 0 0px {{ block.settings.star_glow_color }});
  }

  .ai-star-{{ ai_gen_id }}:hover {
    transform: scale(1.2);
    filter: drop-shadow(0 0 8px {{ block.settings.star_glow_color }});
  }

  .ai-star-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
  }

  .ai-star-filled-{{ ai_gen_id }} {
    fill: url(#ai-star-gradient-{{ ai_gen_id }});
  }

  .ai-star-empty-{{ ai_gen_id }} {
    fill: {{ block.settings.star_empty_color }};
  }

  .ai-rating-text-{{ ai_gen_id }} {
    margin-top: {{ block.settings.rating_text_spacing }}px;
    font-size: {{ block.settings.rating_text_size }}px;
    color: {{ block.settings.content_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-accordion-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.9 }}px;
    }

    .ai-accordion-content-inner-{{ ai_gen_id }} {
      font-size: {{ block.settings.content_size | times: 0.9 }}px;
    }

