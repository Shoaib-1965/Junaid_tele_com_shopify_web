{% doc %}
  @prompt
    Design an upsell section for a Shopify repair page titled:
    “Don’t Break It Again! Add Protection to Your Repair”
    
    Place this section immediately after the pricing section.
    
    Display a horizontal product carousel with clean product cards.
    
    Show relevant products based on repair type:
    
    For screen repairs: UV Curved Glass Protectors, Sunlong Tempered Glass
    
    For battery repairs: Ronin Fast Chargers, Original Adapters
    
    General protection: Heavy-Duty Armor Pouches
    
    Add a visible badge on each product card:
    “Free Installation with Repair Service”
    
    Design should encourage add-to-cart without feeling pushy and match Shopify ecommerce style.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-repair-upsell-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding: 60px 20px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-repair-upsell-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
  }

  .ai-repair-upsell-header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 40px;
  }

  .ai-repair-upsell-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0 0 12px;
    font-weight: 700;
  }

  .ai-repair-upsell-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    color: {{ block.settings.text_color }};
    opacity: 0.8;
    margin: 0;
  }

  .ai-repair-upsell-carousel-wrapper-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
    margin: 0 auto;
  }

  .ai-repair-upsell-carousel-{{ ai_gen_id }} {
    display: flex;
    gap: 20px;
    overflow-x: auto;
    scroll-behavior: smooth;
    scrollbar-width: none;
    -ms-overflow-style: none;
    padding: 10px 0 20px;
  }

  .ai-repair-upsell-carousel-{{ ai_gen_id }}::-webkit-scrollbar {
    display: none;
  }

  .ai-repair-upsell-card-{{ ai_gen_id }} {
    flex: 0 0 280px;
    background-color: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    border: 1px solid {{ block.settings.card_border_color }};
    padding: 20px;
    position: relative;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .ai-repair-upsell-card-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
  }

  .ai-repair-upsell-badge-{{ ai_gen_id }} {
    position: absolute;
    top: 12px;
    right: 12px;
    background-color: {{ block.settings.badge_background }};
    color: {{ block.settings.badge_text_color }};
    padding: 6px 12px;
    border-radius: {{ block.settings.badge_border_radius }}px;
    font-size: 11px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    z-index: 2;
  }

  .ai-repair-upsell-image-wrapper-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 1;
    margin-bottom: 16px;
    border-radius: 8px;
    overflow: hidden;
    background-color: #f5f5f5;
  }

  .ai-repair-upsell-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-repair-upsell-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f5f5f5;
  }

  .ai-repair-upsell-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-repair-upsell-product-title-{{ ai_gen_id }} {
    font-size: 16px;
    font-weight: 600;
    color: {{ block.settings.text_color }};
    margin: 0 0 8px;
    line-height: 1.3;
    min-height: 42px;
  }

  .ai-repair-upsell-product-price-{{ ai_gen_id }} {
    font-size: 18px;
    font-weight: 700;
    color: {{ block.settings.text_color }};
    margin: 0 0 16px;
  }

  .ai-repair-upsell-add-button-{{ ai_gen_id }} {
    width: 100%;
    padding: 12px 20px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    border: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: 14px;
    font-weight: 600;
    cursor: pointer;
    transition: background-color 0.2s ease;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .ai-repair-upsell-add-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
  }

  .ai-repair-upsell-nav-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    gap: 12px;
    margin-top: 24px;
  }

  .ai-repair-upsell-nav-button-{{ ai_gen_id }} {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background-color: {{ block.settings.card_background }};
    border: 1px solid {{ block.settings.card_border_color }};
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .ai-repair-upsell-nav-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_background }};
    border-color: {{ block.settings.button_background }};
  }

  .ai-repair-upsell-nav-button-{{ ai_gen_id }}:hover svg {
    stroke: {{ block.settings.button_text_color }};
  }

  .ai-repair-upsell-nav-button-{{ ai_gen_id }} svg {
    width: 20px;
    height: 20px;
    stroke: {{ block.settings.text_color }};
    transition: stroke 0.2s ease;
  }

  .ai-repair-upsell-empty-state-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: {{ block.settings.text_color }};
    opacity: 0.6;
    font-size: 16px;
  }

  @media screen and (max-width: 749px) {
    .ai-repair-upsell-{{ ai_gen_id }} {
      padding: 40px 16px;
    }

    .ai-repair-upsell-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.7 }}px;
    }

    .ai-repair-upsell-subtitle-{{ ai_gen_id }} {
      font-size: {{ block.settings.subtitle_size | times: 0.85 }}px;
    }

    .ai-repair-upsell-card-{{ ai_gen_id }} {
      flex: 0 0 240px;
    }

    .ai-repair-upsell-nav-{{ ai_gen_id }} {
      display: none;
    }
  }
{% endstyle %}

<repair-upsell-{{ ai_gen_id }} class="ai-repair-upsell-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-repair-upsell-container-{{ ai_gen_id }}">
    <div class="ai-repair-upsell-header-{{ ai_gen_id }}">
      {% if block.settings.title != blank %}
        <h2 class="ai-repair-upsell-title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
      {% endif %}
      {% if block.settings.subtitle != blank %}
        <p class="ai-repair-upsell-subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</p>
      {% endif %}
    </div>

    {% if block.settings.products != blank %}
      <div class="ai-repair-upsell-carousel-wrapper-{{ ai_gen_id }}">
        <div class="ai-repair-upsell-carousel-{{ ai_gen_id }}" data-carousel>
          {% for product in block.settings.products %}
            <div class="ai-repair-upsell-card-{{ ai_gen_id }}">
              {% if block.settings.show_badge %}
                <div class="ai-repair-upsell-badge-{{ ai_gen_id }}">
                  {{ block.settings.badge_text }}
                </div>
              {% endif %}

              <div class="ai-repair-upsell-image-wrapper-{{ ai_gen_id }}">
                {% if product.featured_image %}
                  <img
                    src="{{ product.featured_image | image_url: width: 400 }}"
                    alt="{{ product.featured_image.alt | escape }}"
                    class="ai-repair-upsell-image-{{ ai_gen_id }}"
                    loading="lazy"
                    width="400"
                    height="400"
                  >
                {% else %}
                  <div class="ai-repair-upsell-image-placeholder-{{ ai_gen_id }}">
                    {{ 'product-1' | placeholder_svg_tag }}
                  </div>
                {% endif %}
              </div>

              <h3 class="ai-repair-upsell-product-title-{{ ai_gen_id }}">
                {{ product.title }}
              </h3>

              <div class="ai-repair-upsell-product-price-{{ ai_gen_id }}">
                {{ product.price | money }}
              </div>

              <button
                class="ai-repair-upsell-add-button-{{ ai_gen_id }}"
                data-product-id="{{ product.id }}"
                data-variant-id="{{ product.selected_or_first_available_variant.id }}"
                aria-label="Add {{ product.title }} to cart"
              >
                {{ block.settings.button_text }}
              </button>
            </div>
          {% endfor %}
        </div>

        <div class="ai-repair-upsell-nav-{{ ai_gen_id }}">
          <button
            class="ai-repair-upsell-nav-button-{{ ai_gen_id }}"
            data-nav="prev"
            aria-label="Previous products"
          >
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7" />
            </svg>
          </button>
          <button
            class="ai-repair-upsell-nav-button-{{ ai_gen_id }}"
            data-nav="next"
            aria-label="Next products"
          >
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
            </svg>
          </button>
        </div>
      </div>
    {% else %}
      <div class="ai-repair-upsell-empty-state-{{ ai_gen_id }}">
        Add products to display in this upsell section
      </div>
    {% endif %}
  </div>
</repair-upsell-{{ ai_gen_id }}>

<script>
  (function() {
    class RepairUpsell{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.carousel = this.querySelector('[data-carousel]');
        this.prevButton = this.querySelector('[data-nav="prev"]');
        this.nextButton = this.querySelector('[data-nav="next"]');
        this.addButtons = this.querySelectorAll('.ai-repair-upsell-add-button-{{ ai_gen_id }}');
      }

      connectedCallback() {
        this.setupCarousel();
        this.setupAddToCart();
      }

      setupCarousel() {
        if (!this.carousel || !this.prevButton || !this.nextButton) return;

        this.prevButton.addEventListener('click', () => {
          const scrollAmount = this.carousel.offsetWidth * 0.8;
          this.carousel.scrollBy({ left: -scrollAmount, behavior: 'smooth' });
        });

        this.nextButton.addEventListener('click', () => {
          const scrollAmount = this.carousel.offsetWidth * 0.8;
          this.carousel.scrollBy({ left: scrollAmount, behavior: 'smooth' });
        });
      }

      setupAddToCart() {
        this.addButtons.forEach(button => {
          button.addEventListener('click', async (e) => {
            const variantId = e.target.dataset.variantId;
            const originalText = e.target.textContent;

            if (!variantId) return;

            e.target.disabled = true;
            e.target.textContent = 'Adding...';

            try {
              const response = await fetch('/cart/add.js', {
                method: 'POST',
                headers: {
                  'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                  items: [{
                    id: variantId,
                    quantity: 1
                  }]
                })
              });

              if (response.ok) {
                e.target.textContent = 'Added!';
                
                setTimeout(() => {
                  e.target.textContent = originalText;
                  e.target.disabled = false;
                }, 2000);

                document.dispatchEvent(new CustomEvent('cart:refresh'));
                
                if (window.theme && window.theme.cart) {
                  window.theme.cart.refresh();
                }
              } else {
                throw new Error('Failed to add to cart');
              }
            } catch (error) {
              e.target.textContent = 'Error';
              setTimeout(() => {
                e.target.textContent = originalText;
                e.target.disabled = false;
              }, 2000);
            }
          });
        });
      }
    }

    customElements.define('repair-upsell-{{ ai_gen_id }}', RepairUpsell{{ ai_gen_id }});
  })();
</script>

