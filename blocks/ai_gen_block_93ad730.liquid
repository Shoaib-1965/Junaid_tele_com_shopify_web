{% doc %}
  @prompt
    Create a simple product slider for a Shopify webpage of Junaid Telecom.
    Section Title:
    “Repair Accessories – Free Installation Included”
    
    Display products in clean card-style sliders with soft shadows and smooth hover effects (no 3D movement).
    
    Add a small badge on each product card:
    “Free Installation”
    
    Buttons:
    
    View Product (opens product page)
    
    Add to Cart (adds instantly without reload)
    Slider should be mobile-friendly, swipe-enabled, fast, and minimal.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-product-slider-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding: {{ block.settings.section_padding }}px 0;
    background-color: {{ block.settings.background_color }};
  }

  .ai-product-slider-container-{{ ai_gen_id }} {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-product-slider-header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 40px;
  }

  .ai-product-slider-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0;
    font-weight: 700;
  }

  .ai-product-slider-wrapper-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
    margin: 0 -10px;
  }

  .ai-product-slider-track-{{ ai_gen_id }} {
    display: flex;
    gap: 20px;
    padding: 0 10px 20px;
    overflow-x: auto;
    scroll-behavior: smooth;
    scrollbar-width: none;
    -webkit-overflow-scrolling: touch;
  }

  .ai-product-slider-track-{{ ai_gen_id }}::-webkit-scrollbar {
    display: none;
  }

  .ai-product-card-{{ ai_gen_id }} {
    flex: 0 0 calc(25% - 15px);
    min-width: 280px;
    background: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .ai-product-card-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.12);
  }

  .ai-product-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-top: 100%;
    overflow: hidden;
    background-color: #f5f5f5;
  }

  .ai-product-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-product-badge-{{ ai_gen_id }} {
    position: absolute;
    top: 12px;
    right: 12px;
    background-color: {{ block.settings.badge_background }};
    color: {{ block.settings.badge_text_color }};
    padding: 6px 12px;
    border-radius: {{ block.settings.badge_border_radius }}px;
    font-size: 12px;
    font-weight: 600;
    z-index: 2;
  }

  .ai-product-info-{{ ai_gen_id }} {
    padding: 20px;
  }

  .ai-product-title-{{ ai_gen_id }} {
    font-size: 16px;
    font-weight: 600;
    color: {{ block.settings.product_title_color }};
    margin: 0 0 8px;
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .ai-product-price-{{ ai_gen_id }} {
    font-size: 18px;
    font-weight: 700;
    color: {{ block.settings.price_color }};
    margin: 0 0 16px;
  }

  .ai-product-buttons-{{ ai_gen_id }} {
    display: flex;
    gap: 8px;
  }

  .ai-product-btn-{{ ai_gen_id }} {
    flex: 1;
    padding: 12px 16px;
    border: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: 14px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    text-decoration: none;
    text-align: center;
    display: inline-block;
  }

  .ai-product-btn-view-{{ ai_gen_id }} {
    background-color: {{ block.settings.view_btn_bg }};
    color: {{ block.settings.view_btn_text }};
  }

  .ai-product-btn-view-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.view_btn_hover_bg }};
    color: {{ block.settings.view_btn_hover_text }};
  }

  .ai-product-btn-cart-{{ ai_gen_id }} {
    background-color: {{ block.settings.cart_btn_bg }};
    color: {{ block.settings.cart_btn_text }};
  }

  .ai-product-btn-cart-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.cart_btn_hover_bg }};
    color: {{ block.settings.cart_btn_hover_text }};
  }

  .ai-product-btn-cart-{{ ai_gen_id }}:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .ai-slider-nav-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    gap: 12px;
    margin-top: 24px;
  }

  .ai-slider-nav-btn-{{ ai_gen_id }} {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background-color: {{ block.settings.nav_button_bg }};
    color: {{ block.settings.nav_button_color }};
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
  }

  .ai-slider-nav-btn-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.nav_button_hover_bg }};
    color: {{ block.settings.nav_button_hover_color }};
  }

  .ai-slider-nav-btn-{{ ai_gen_id }}:disabled {
    opacity: 0.3;
    cursor: not-allowed;
  }

  .ai-empty-state-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: #666;
  }

  @media screen and (max-width: 1024px) {
    .ai-product-card-{{ ai_gen_id }} {
      flex: 0 0 calc(33.333% - 14px);
    }
  }

  @media screen and (max-width: 768px) {
    .ai-product-card-{{ ai_gen_id }} {
      flex: 0 0 calc(50% - 10px);
      min-width: 200px;
    }

    .ai-product-slider-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.8 }}px;
    }

    .ai-product-buttons-{{ ai_gen_id }} {
      flex-direction: column;
    }
  }

  @media screen and (max-width: 480px) {
    .ai-product-card-{{ ai_gen_id }} {
      flex: 0 0 calc(100% - 10px);
    }
  }
{% endstyle %}

<product-slider-{{ ai_gen_id }} class="ai-product-slider-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-product-slider-container-{{ ai_gen_id }}">
    {% if block.settings.section_title != blank %}
      <div class="ai-product-slider-header-{{ ai_gen_id }}">
        <h2 class="ai-product-slider-title-{{ ai_gen_id }}">{{ block.settings.section_title }}</h2>
      </div>
    {% endif %}

    {% if block.settings.product_list != blank %}
      <div class="ai-product-slider-wrapper-{{ ai_gen_id }}">
        <div class="ai-product-slider-track-{{ ai_gen_id }}" data-slider-track>
          {% for product in block.settings.product_list %}
            <div class="ai-product-card-{{ ai_gen_id }}">
              <div class="ai-product-image-wrapper-{{ ai_gen_id }}">
                {% if product.featured_image %}
                  <img
                    src="{{ product.featured_image | image_url: width: 600 }}"
                    alt="{{ product.featured_image.alt | escape }}"
                    class="ai-product-image-{{ ai_gen_id }}"
                    loading="lazy"
                    width="600"
                    height="600"
                  >
                {% else %}
                  <div class="ai-product-image-placeholder-{{ ai_gen_id }}">
                    {{ 'product-1' | placeholder_svg_tag }}
                  </div>
                {% endif %}

                {% if block.settings.show_badge %}
                  <div class="ai-product-badge-{{ ai_gen_id }}">
                    {{ block.settings.badge_text }}
                  </div>
                {% endif %}
              </div>

              <div class="ai-product-info-{{ ai_gen_id }}">
                <h3 class="ai-product-title-{{ ai_gen_id }}">{{ product.title }}</h3>
                <div class="ai-product-price-{{ ai_gen_id }}">{{ product.price | money }}</div>

                <div class="ai-product-buttons-{{ ai_gen_id }}">
                  <a
                    href="{{ product.url }}"
                    class="ai-product-btn-{{ ai_gen_id }} ai-product-btn-view-{{ ai_gen_id }}"
                  >
                    {{ block.settings.view_btn_label }}
                  </a>

                  <button
                    type="button"
                    class="ai-product-btn-{{ ai_gen_id }} ai-product-btn-cart-{{ ai_gen_id }}"
                    data-product-id="{{ product.id }}"
                    data-variant-id="{{ product.selected_or_first_available_variant.id }}"
                    {% unless product.available %}disabled{% endunless %}
                  >
                    {% if product.available %}
                      {{ block.settings.cart_btn_label }}
                    {% else %}
                      Sold Out
                    {% endif %}
                  </button>
                </div>
              </div>
            </div>
          {% endfor %}
        </div>

        <div class="ai-slider-nav-{{ ai_gen_id }}">
          <button
            type="button"
            class="ai-slider-nav-btn-{{ ai_gen_id }}"
            data-nav-prev
            aria-label="Previous products"
          >
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="15 18 9 12 15 6"></polyline>
            </svg>
          </button>
          <button
            type="button"
            class="ai-slider-nav-btn-{{ ai_gen_id }}"
            data-nav-next
            aria-label="Next products"
          >
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="9 18 15 12 9 6"></polyline>
            </svg>
          </button>
        </div>
      </div>
    {% else %}
      <div class="ai-empty-state-{{ ai_gen_id }}">
        <p>Select products to display in the slider</p>
      </div>
    {% endif %}
  </div>
</product-slider-{{ ai_gen_id }}>

<script>
  (function() {
    class ProductSlider{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.track = this.querySelector('[data-slider-track]');
        this.prevBtn = this.querySelector('[data-nav-prev]');
        this.nextBtn = this.querySelector('[data-nav-next]');
        this.addToCartButtons = this.querySelectorAll('.ai-product-btn-cart-{{ ai_gen_id }}');
      }

      connectedCallback() {
        if (this.track && this.prevBtn && this.nextBtn) {
          this.setupSlider();
        }
        this.setupAddToCart();
      }

      setupSlider() {
        this.prevBtn.addEventListener('click', () => {
          this.track.scrollBy({
            left: -this.track.offsetWidth * 0.8,
            behavior: 'smooth'
          });
        });

        this.nextBtn.addEventListener('click', () => {
          this.track.scrollBy({
            left: this.track.offsetWidth * 0.8,
            behavior: 'smooth'
          });
        });

        this.track.addEventListener('scroll', () => {
          this.updateNavButtons();
        });

        this.updateNavButtons();
      }

      updateNavButtons() {
        const scrollLeft = this.track.scrollLeft;
        const maxScroll = this.track.scrollWidth - this.track.clientWidth;

        this.prevBtn.disabled = scrollLeft <= 0;
        this.nextBtn.disabled = scrollLeft >= maxScroll - 1;
      }

      setupAddToCart() {
        this.addToCartButtons.forEach(button => {
          button.addEventListener('click', async (e) => {
            const btn = e.currentTarget;
            const variantId = btn.dataset.variantId;

            if (!variantId || btn.disabled) return;

            const originalText = btn.textContent;
            btn.disabled = true;
            btn.textContent = 'Adding...';

            try {
              const response = await fetch('/cart/add.js', {
                method: 'POST',
                headers: {
                  'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                  items: [{
                    id: variantId,
                    quantity: 1
                  }]
                })
              });

              if (response.ok) {
                btn.textContent = 'Added!';
                
                const cartCountElements = document.querySelectorAll('[data-cart-count], .cart-count');
                if (cartCountElements.length > 0) {
                  const cartResponse = await fetch('/cart.js');
                  const cart = await cartResponse.json();
                  cartCountElements.forEach(el => {
                    el.textContent = cart.item_count;
                  });
                }

                setTimeout(() => {
                  btn.textContent = originalText;
                  btn.disabled = false;
                }, 2000);
              } else {
                throw new Error('Failed to add to cart');
              }
            } catch (error) {
              btn.textContent = 'Error';
              setTimeout(() => {
                btn.textContent = originalText;
                btn.disabled = false;
              }, 2000);
            }
          });
        });
      }
    }

    customElements.define('product-slider-{{ ai_gen_id }}', ProductSlider{{ ai_gen_id }});
  })();
</script>

